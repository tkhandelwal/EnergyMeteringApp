{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=EnergyMetering.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "DataGeneration": {
      "DefaultIntervalMinutes": 15,
      "DefaultBaseValue": 10.0,
      "DefaultVariance": 2.0
    },
    "Visualization": {
      "DefaultTimeRange": "week",
      "ChartColors": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#d62728",
        "#9467bd",
        "#8c564b"
      ]
    },
    "Reports": {
      "MaxDataPoints": 10000,
      "EnabledReportTypes": [
        "energyFlow",
        "pareto",
        "enpi",
        "hourlyUsage",
        "dailyComparison"
      ]
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:5001",
      "http://localhost:3000"
    ]
  },
  "SpaClient": {
    "RootPath": "ClientApp/build",
    "DevelopmentServerUrl": "http://localhost:3000"
  }
}